# Secrets template - Copy to ~/.secrets.env and fill in values
# Format: KEY=value (no export, no quotes needed)

# Zulip - conversation sync for Claude Code and OpenCode
ZULIP_SITE=https://your-zulip-instance.example.com
ZULIP_BOT_EMAIL=bot@your-zulip-instance.example.com
ZULIP_BOT_API_KEY=your-zulip-bot-api-key
ZULIP_STREAM_CLAUDE_CODE=claude-code
ZULIP_STREAM_OPEN_CODE=opencode

# AI/LLM API Keys - for CodeCompanion.nvim and other tools
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
